<%= simple_form_for @post do |f| %>
  <%= f.input :title %>
  <%= f.input :location %>
  <%= f.label :球聚時間 %>
  <%= f.select :day, Date::DAYNAMES.zip((0..6).to_a) %>
  <%= f.input :comment %>
  
  <%= link_to "Cancel", posts_path %>
  <%= f.submit :submit, data: { disable_with: "Submitting..."} %>
<% end %>