<table style="width:100%;">  
  <tr>
    <td>球隊名稱</td>
    <td></td>
  </tr>
  <% @posts.each do |post| %>
    <tr>    
      <td><%= link_to post.title, post_path(post) %></td>
      <td><%= link_to "刪除", post_path(post), method: :delete, data: { confirm: "Are you sure?" } %></td>    
    </tr>
  <% end %>
</table>

